.container
  %h2 All Boards
  - @boards.each do |board|
    = link_to board_path(board) do
      .boards
        .boards_title
          = board.title
        .boards_content
          = board.content
        .boards_detail
          = image_tag current_user.avatar_image
          %p= board.user.display_name
          %p= board.display_created_at
  = link_to new_board_path do
    %p.add_board_btn + Add new board
.container
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @task, url: board_task_path, method: 'put', local: true) do |f|
    %div
      %h2= f.label :eyecatch
    %div
      = f.file_field :eyecatch
    %div
      %h2= f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      %h2= f.label :content, 'description'
    %div
      = f.text_area :content, class: 'text'
    %div
      %h2= f.label :deadline, 'deadline'
    %div
      = f.date_field :deadline, class: 'text'
    = f.submit '保存', class: 'btn-primary'